<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:startColor="#C89B50"
                android:centerColor="#C89B50"
                android:centerY="1.0"
                android:endColor="@color/colorBolotoText"
                android:angle="270"
                android:alpha="0.15" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="@color/colorBolotoText"
                    android:centerColor="@color/colorBolotoText"
                    android:endColor="@color/colorBolotoText" />
            </shape>
        </clip>
    </item>
</layer-list>