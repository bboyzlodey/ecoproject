<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorWhite</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="textAppearanceButton">@style/ButtonTextAppearance</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonTextAppearance.Profile">
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonStyle.Profile">
        <item name="cornerRadius">8sp</item>
    </style>

    <style name="ProfileThemeOverlay">
        <item name="textAppearanceButton">@style/ButtonTextAppearance.Profile</item>
        <item name="materialButtonStyle">@style/ButtonStyle.Profile</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/bellota_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ParagraphText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="titleTextAppearance" parent="@style/Widget.AppCompat.TextView">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardTitleText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#252723</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullscreenCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ButtonStrokedStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_stroked</item>
        <item name="android:textColor">@color/colorBolotoText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonFillStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_boloto</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EcoProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
    </style>
</resources>
