<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorWhite</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="textColorSecondary">@color/colorGrey</item>
        <item name="textAppearanceButton">@style/ButtonTextAppearance</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <item name="textAppearanceCaption">@style/Caption</item>
        <item name="textAppearanceHeadline4">@style/Headline4</item>
        <item name="textAppearanceHeadline5">@style/Headline5</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <attr name="textColorSecondary" format="color" />

    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonTextAppearance.Profile">
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ThemeOverlayGoogleSignIn">
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="GoogleSignIn" parent="Widget.MaterialComponents.Button">
        <item name="icon">@drawable/fui_ic_googleg_color_24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonStyle.Profile">
        <item name="cornerRadius">8sp</item>
    </style>

    <style name="ProfileThemeOverlay_TODO">
        <item name="textAppearanceButton">@style/ButtonTextAppearance.Profile</item>
        <item name="materialButtonStyle">@style/ButtonStyle.Profile</item>
    </style>

    <style name="ProfileThemeOverlay">
        <item name="colorSecondary">@color/colorWhite</item>
        <item name="colorOnSecondary">@color/colorDark</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button" />

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/bellota_bold</item>
        <item name="android:fontFamily">@font/bellota_bold</item>
        <item name="android:letterSpacing">0.0208</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/bellota_bold</item>
        <item name="android:fontFamily">@font/bellota_bold</item>
        <item name="android:letterSpacing">0.0208</item>
    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/bellota_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="ThemeOverlayFab" />

    <style name="ThemeOverlayFab.Boloto">
        <item name="colorOnSurface">@color/colorPrimary</item>
    </style>

    <style name="FabStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="FabStyle.NextScreen">
        <item name="fabSize">normal</item>
        <item name="srcCompat">@drawable/ic_arrow_back</item>
        <item name="theme">@style/ThemeOverlayFab.Boloto</item>
    </style>

    <style name="FabStyle.NextScreen.Small">
        <item name="fabSize">mini</item>
        <item name="srcCompat">@drawable/arrow_small</item>
    </style>

    <style name="FabStyle.PrevScreen">
        <item name="fabSize">mini</item>
        <item name="srcCompat">@drawable/ic_arrow_back_small</item>
    </style>

    <style name="FabStyle.PrevScreen.Unelevated">
        <item name="fabSize">mini</item>
        <item name="srcCompat">@drawable/ic_arrow_back_small</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton</item>
    </style>


    <style name="FabStyle.Close">
        <item name="fabSize">mini</item>
        <item name="srcCompat">@drawable/ic_exit</item>
    </style>

    <style name="ParagraphText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="titleTextAppearance" parent="@style/Widget.AppCompat.TextView">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardTitleText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="FullscreenCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ButtonStrokedStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_stroked</item>
        <item name="android:textColor">@color/colorBolotoText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonFillStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_boloto</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EcoProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
    </style>
</resources>
