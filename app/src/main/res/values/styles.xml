<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorButtonNormal">@color/colorBlack</item>
		<item name="android:statusBarColor">@color/colorBlack</item>
	</style>
	<style name="Home" parent="Widget.AppCompat.ButtonBar">
		<item name="background">@color/colorWhite</item>
	</style>
	<style name="nameOfSoviet" parent="@style/Widget.AppCompat.TextView">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/colorBlack</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="FullscreenCustom" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
</resources>
