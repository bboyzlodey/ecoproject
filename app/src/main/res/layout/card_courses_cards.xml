<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.CourseCardActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/background_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@drawable/text_view_rounded"
        android:layout_weight="0"
        android:onClick="openCard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#252723"
            android:fontFamily="@font/bellota_bold"
            tools:text="Title"
            android:id="@+id/title_card"
            tools:visibility="visible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/description"
            android:fontFamily="@font/sf_font_pro"
            android:layout_alignTop="@+id/title_card"
            android:layout_marginTop="25dp"
            android:layout_marginStart="24dp"
            android:textSize="12sp"
            android:id="@+id/descr_card"
            android:textColor="@color/colorGray"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/card_close"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:text="@string/count_card"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/ic_close"
            tools:visibility="gone"
            />

        <TextView
            android:id="@+id/count_open_card"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_empty_circle"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="@string/count_card"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="14sp"
            tools:visibility="gone"
            />

    </RelativeLayout>
    <View
        android:id="@+id/nextCard"
        android:layout_width="3dp"
        android:layout_height="14dp"
        android:layout_gravity="center"
        android:background="#727272"
        />
</LinearLayout>