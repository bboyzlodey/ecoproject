<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="16dp"
	android:layout_marginRight="16dp"
	android:layout_marginTop="19dp"
	app:cardCornerRadius="16dp"
	android:backgroundTint="@color/colorBolotoButton">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="">

		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/description_image"
			android:src="@drawable/lvl_1_1"
			android:scaleType="centerCrop"
			app:riv_corner_radius="16dip"
			app:riv_mutate_background="true"
			app:riv_tile_mode="repeat"
			android:layout_height="167dp"
			android:layout_width="match_parent" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/description_image"
			android:orientation="vertical"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:paddingTop="24dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Результат"
				android:textColor="@color/colorGray"
				android:textSize="16sp"/>
			<TextView
				android:id="@+id/question"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="Случается, что мы физически не успеваем есть еду. Как можно ее спасти?"
				android:layout_marginTop="8dp"
				android:textSize="16sp"
				android:textColor="@color/answerTextColor"
				/>
			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/text_view_rounded"
				android:text="Дальше"
				android:textColor="@color/colorWhite"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="24dp"
				android:textAllCaps="true"/>

		</LinearLayout>
	</RelativeLayout>



</androidx.cardview.widget.CardView>