<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/curs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/default_margin"
            android:fontFamily="@font/bellota_bold"
            android:text="@string/curs_title"
            android:textColor="@color/colorBlack"
            android:textSize="32sp"
            />


        <ProgressBar
            android:id="@+id/progressOfCourse"
            style="@style/EcoProgressBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/eco_progress_bar_height"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:id="@+id/left_cards"
            style="?attr/textAppearanceCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/left_cards"
            />

        <TextView
            android:id="@+id/course_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="6sp"
            android:text="@string/description"
            android:textColor="@color/colorBlackTitle"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            />

    </LinearLayout>


</FrameLayout>