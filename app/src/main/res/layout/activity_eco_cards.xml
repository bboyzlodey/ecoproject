<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".EcoCardActivity"
	android:orientation="vertical"
	android:layout_weight="0">

	<Toolbar
		android:id="@+id/my_toolbar"
		android:layout_width="match_parent"
		android:layout_height="330dp"
		android:elevation="4dp"
		android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
		app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
		tools:title="TITLE"
		tools:subtitle="SUBTITLE"
		tools:background="@drawable/original"
		android:titleTextColor="@android:color/white"
		android:subtitleTextColor="@android:color/white"
		android:gravity="bottom"
		android:outlineSpotShadowColor="@color/colorBlack"
		android:layout_marginBottom="24dp"
		android:layout_weight="1"
		/>

	<com.jackandphantom.customtogglebutton.CustomToggle
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:id="@+id/custom"
		app:ctg_addAnimationType="jack_animation"
		app:ctg_addSlideBackgroundColor="#6c817a"
		app:ctg_addSlideColor="#ff67" />

	<Switch
		android:id="@+id/switch1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/switch_compat"
		android:layout_centerHorizontal="true"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:checked="false"
		android:textOff="Как?"
		android:textOn="Зачеем?"
		android:layout_weight="0"/>

	<androidx.recyclerview.widget.RecyclerView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="16dp"
		app:layoutManager="LinearLayoutManager"
		android:id="@+id/recycle_soviets"
		android:layout_weight="2"/>

</LinearLayout>