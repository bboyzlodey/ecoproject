<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginBottom="8dp"
        android:id="@+id/current_course"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        app:cardCornerRadius="10dp"
        android:onClick="openCourse"
        app:cardBackgroundColor="@color/colorBolotoButton"
        android:tag="tag"
        tools:tag="tag"
        android:layout_weight="0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lvl_1_1"
            android:scaleType="centerCrop"
            android:id="@+id/imgCourse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/current_title"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/bellota_bold"
                android:textSize="24sp"
                tools:text="Первые шаги" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/roboto"
                android:id="@+id/current_small_description"
                tools:text="Изи"
                tools:tag="firstStep" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>