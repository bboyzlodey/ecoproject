<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/current_course"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0"
        android:tag="tag"
        app:cardBackgroundColor="@color/colorBolotoButton"
        app:cardCornerRadius="10dp"
        tools:tag="tag"
        >


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOpenCourse"
            style="@style/FabStyle.NextScreen.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:theme="@style/ProfileThemeOverlay"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/imgCourse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lvl_1_1"
            />

        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/current_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bellota_bold"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                tools:text="Первые шаги"
                />

            <TextView
                android:id="@+id/current_small_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                tools:tag="firstStep"
                tools:text="Изи"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>