<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splash"
    >

    <fragment
        android:id="@+id/splash"
        android:name="skarlat.dev.ecoproject.presentation.launch.SplashFragment"
        tools:layout="@layout/fragment_splash"
        >
        <action
            android:id="@+id/action_splash_to_homeActivity"
            app:destination="@id/homeActivity"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_splash_to_signInActivity"
            app:destination="@id/signInActivity"
            app:launchSingleTop="true"
            />
    </fragment>

    <activity
        android:id="@+id/signInActivity"
        android:name="skarlat.dev.ecoproject.presentation.auth.AuthActivity"
        android:label="activity_sign_in"
        tools:layout="@layout/activity_sign_in"
        />
    <activity
        android:id="@+id/homeActivity"
        android:name="skarlat.dev.ecoproject.presentation.home.HomeActivity"
        android:label="activity_home"
        app:popUpToInclusive="true"
        tools:layout="@layout/activity_home"
        />


</navigation>