<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="skarlat.dev.ecoproject">

	<uses-permission android:name="android.permission.INTERNET" />


	<application
		android:name=".includes.database.App"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:largeHeap="true"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:usesCleartextTraffic="true"
		android:theme="@style/AppTheme">

		<activity android:name=".activity.SignInActivity" />
		<activity android:name=".activity.AuthActivity" />
		<activity
			android:name=".activity.EcoCardActivity"
			android:parentActivityName=".activity.ProjectActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activity.ProjectActivity" />
		</activity>
		<activity android:name=".activity.ProjectActivity" />
		<activity android:name=".activity.HomeActivity" />
		<activity android:name=".activity.CourseCardActivity" />
		<activity android:name=".activity.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<meta-data
			android:name="preloaded_fonts"
			android:resource="@array/preloaded_fonts" />
	</application>

</manifest>